<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".MainActivity"
    android:padding="20dp"
    android:gravity="center"
    >




    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/keyboard" />
    <ImageButton
        android:id="@+id/imageButton10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:srcCompat="@drawable/graphic_designer"
        android:layout_marginLeft="-90dp"
        android:layout_marginTop="-60dp"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="-90dp"
        android:rotationX="11"
        android:rotationY="-23"
        app:srcCompat="@drawable/graphic_design" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="35dp"
        android:fontFamily="sans-serif-black"
        android:text="Simple Calculator"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:fontFamily="sans-serif-medium"
        android:text="it is indeed simple, however it is also stupidly looking."
        android:textSize="8sp" />

    <EditText
        android:id="@+id/etFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter the first number"
        android:inputType="number" />

    <EditText
        android:id="@+id/etSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter the second number"
        android:inputType="number"/>


    <ImageButton
        android:id="@+id/bAdd"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:scaleType="center"
        app:srcCompat="@drawable/plus"
        android:layout_marginLeft="-130dp"/>

    <ImageButton
        android:id="@+id/bSubtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/remove"
        android:layout_marginLeft="-29dp"
        android:layout_marginTop="-70dp"/>

    <ImageButton
        android:id="@+id/bMultiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="-60dp"
        app:srcCompat="@drawable/delete" />

    <ImageButton
        android:id="@+id/bDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="-50dp"
        app:srcCompat="@drawable/circle" />
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textStyle="italic"
        android:layout_margin="15dp"/>
    <Button
        android:id="@+id/bResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="="
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        />



</LinearLayout>